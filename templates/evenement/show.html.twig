{% extends 'baseback.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
<div style="margin-bottom: 100px ; margin-left: 300px">
    <h1>Evenement</h1>




    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>NomEvent</th>
                <td>{{ evenement.nomEvent }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DescriptionEvent</th>
                <td>{{ evenement.descriptionEvent }}</td>
            </tr>
            <tr>
                <th>PrixEvent</th>
                <td>{{ evenement.prixEvent }}</td>
            </tr>
            <tr>
                <th>NbrPlace</th>
                <td>{{ evenement.nbrPlace }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ evenement.image }}</td>
            </tr>
            <tr>
                <th>Valide</th>
                <td>{{ evenement.valide }}</td>
            </tr>
            <tr>
                <th>Participants</th>
                <td>{{ evenement.participants }}</td>
            </tr>
            <tr>
                <th>Idpatient</th>
                <td>{{ evenement.idpatient }}</td>
            </tr>
        </tbody>
    </table>
    <center>
        <button type="button" class="btn btn-outline-primary"><a href="{{ path('app_evenement_index') }}">back to list</a></button>


        <button type="button" class="btn btn-outline-primary"><a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">edit</a></button>

<br>
        {{ include('evenement/_delete_form.html.twig') }}


    </center>
</div>

{% endblock %}
