{% extends 'baseback.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
<div style="margin-top: 20px ; margin-left: 300px">


    <h1>Evenement index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEvent</th>
                <th>Date</th>
                <th>DescriptionEvent</th>
                <th>PrixEvent</th>
                <th>NbrPlace</th>
                <th>Image</th>
                <th>Valide</th>
                <th>Participants</th>
                <th>Idpatient</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.nomEvent }}</td>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.descriptionEvent }}</td>
                <td>{{ evenement.prixEvent }}</td>
                <td>{{ evenement.nbrPlace }}</td>
                <td>{{ evenement.image }}</td>
                <td>{{ evenement.valide }}</td>
                <td>{{ evenement.participants }}</td>
                <td>{{ evenement.idpatient }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
    <br>
    <div style="margin-top: 150px ; margin-left: 350px">
        <div class="row mrg-0 mrg-top-20">
            <div class="tr-single-box">
                <div class="tr-single-header">
                    <h3 class="dashboard-title">Moyenne sur les evenment (Nombre des places / Nombres des participants)</h3>
                </div>

                <div class="center-block">

                    <div id="div_chart"></div>

                    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                    <script type="text/javascript">
                        {{ gc_draw(piechart, 'div_chart') }}
                    </script>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
