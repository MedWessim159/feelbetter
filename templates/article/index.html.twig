{% extends 'baseback.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div style="margin-top: 20px ; margin-left: 300px">
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Date</th>
                <th>NomAuteur</th>
                <th>Approuver</th>
                <th>Theme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.titre }}</td>
                <td>{{ article.date | date("Y-m-d")}}</td>
                <td>{{ article.nomAuteur }}</td>
                <td>{{ article.approuver }}</td>
                <td>{{ article.theme }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'idarticle': article.idarticle}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'idarticle': article.idarticle}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('app_article_new') }}">Create new</a>
    <div style="margin-top: 150px ; margin-left: 350px">
            <div class="row mrg-0 mrg-top-20">
{% endblock %}
